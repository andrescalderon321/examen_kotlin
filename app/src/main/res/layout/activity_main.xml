<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context=".MainActivity">

<EditText
    android:id="@+id/editTextMetros"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Ingrese los metros" />

<Button
    android:id="@+id/buttonKilometros"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Metros a Kilómetros" />

<Button
    android:id="@+id/buttonCentimetros"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Metros a Centímetros" />

<Button
    android:id="@+id/buttonMilimetros"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Metros a Milímetros" />

<TextView
    android:id="@+id/resultado"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:text="Resultado: "
    android:textStyle="bold" />

</LinearLayout>